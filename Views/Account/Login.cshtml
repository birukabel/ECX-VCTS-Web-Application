@model ECX.VCTS.ViewModels.LoginViewModel

@{

    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        .bs-example {
            margin: 20px;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="hidden-xs-down col"></div>
        <div class="col">
            <div class="card" style="margin: 20px 0;">
                <div class="card-header">
                    Sign in
                </div>
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <form asp-route-returnurl="@this.ViewData["ReturnUrl"]" method="post">
                        <span class="card-text"> ECX Violation Cases Tracking System </span>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user-o"></i>
                                    </span>
                                </span>
                                <input asp-for="Username" placeholder="Username *" class="form-control" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                                <input asp-for="Password" placeholder="Password" class="form-control" type="password" />

                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" style="color: rgb(255, 255, 255);background-color: rgb(141,169,22);" class="btn">Signin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="hidden-xs-down col"></div>
    </div>
</body>
</html>