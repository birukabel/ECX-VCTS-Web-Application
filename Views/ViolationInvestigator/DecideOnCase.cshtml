@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
             $('#file').change(function () {
                var fileName = $(this).val();
                if (validateFile(fileName) == true) {
                    $('#sntbut').show();
                    $('#drpbut').show();
                    //$('#dwnbut').hide();
                } else {
                    $('#drpbut').hide();
                    $('#sntbut').hide();
                    $('#dwnbut').show();
                }
            });
        });

